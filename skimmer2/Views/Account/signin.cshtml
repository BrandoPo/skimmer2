@{
    ViewData["Title"] = "Account Signin";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign in</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        form {
            max-width: 400px;
            margin: 50px auto;
            padding: 20px;
        }

        label {
            display: block;
            margin-bottom: 8px;
        }

        input[type="text"],
        input[type="password"] {
            width: 100%;
            padding: 8px;
            margin-bottom: 16px;
        }

        button {
            padding: 10px 15px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            margin-bottom: 10px;
        }

            button:hover {
            }

        .link-button {
            display: block;
            text-align: center;
            margin-top: 20px;
            text-decoration: none;
        }

            .link-button:hover {
            }
    </style>
</head>
<body>
    <form asp-action="SignIn" method="post">
        @Html.AntiForgeryToken()
        <label for="username">Username:</label>
        <input type="text" id="username" name="username" required value="@Model?.username" />

        <label for="password">Password:</label>
        <input type="password" id="password" name="password" required />

        <button type="submit">Submit</button>

        @if (!ViewData.ModelState.IsValid)
        {
            @foreach (var modelState in ViewData.ModelState.Values)
            {
                @foreach (var error in modelState.Errors)
                {
                    <script>
                        window.onload = function() {
                            alert('@error.ErrorMessage');
                        };
                    </script>
                }
            }
        }
    </form>

    <a href="/home/createacc" class="link-button">Create an Account</a>
</body>
</html>