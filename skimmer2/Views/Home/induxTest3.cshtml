@section Scripts {
    <script>
        console.log("Page loaded!");

        // Slideshow functionality
        const slideshows = {
            'gallery': { currentIndex: 0, images: document.querySelectorAll('.slideshow[data-slideshow-id="gallery"] .slideshow-img') },
            'comparisons': { currentIndex: 0, images: document.querySelectorAll('.slideshow[data-slideshow-id="comparisons"] .slideshow-img') }
        };

        function changeSlide(slideshowId, direction) {
            const slideshow = slideshows[slideshowId];
            slideshow.currentIndex = (slideshow.currentIndex + direction + slideshow.images.length) % slideshow.images.length;
            slideshow.images.forEach((img, index) => {
                img.classList.toggle('active', index === slideshow.currentIndex);
            });
        }

        // Add event listeners to slideshow arrows
        document.querySelectorAll('.slideshow').forEach(slideshow => {
            const slideshowId = slideshow.getAttribute('data-slideshow-id');
            const leftArrow = slideshow.querySelector('.left-arrow');
            const rightArrow = slideshow.querySelector('.right-arrow');

            leftArrow.addEventListener('click', () => changeSlide(slideshowId, -1));
            rightArrow.addEventListener('click', () => changeSlide(slideshowId, 1));
        });

        // Sticky pre-order section visibility
        const stickySection = document.querySelector('.sticky-pre-order');
        const preOrderSection = document.querySelector('.intro-section');
        let isPopupClosed = false; // Track popup state within the page load

        window.addEventListener('scroll', () => {
            const sectionTop = preOrderSection.getBoundingClientRect().top;
            // Show the popup when the top of the pre-order section is about to leave the viewport
            if (sectionTop < 50 && !isPopupClosed) { // 50px buffer for "about to leave"
                stickySection.style.display = 'block';
            } else {
                stickySection.style.display = 'none';
            }
        });

        // Close sticky pre-order section
        function closeStickyPreOrder() {
            stickySection.style.display = 'none';
            isPopupClosed = true; // Set flag to prevent reappearance during this page load
        }
    </script>
}