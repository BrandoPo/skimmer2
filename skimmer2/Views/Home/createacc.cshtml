@{
    ViewData["Title"] = "Account Registration";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Account</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }
        form {
            max-width: 400px;
            margin: 50px auto;
            padding: 20px;
        }
        label {
            display: block;
            margin-bottom: 8px;
        }
        input[type="text"],
        input[type="password"],
        input[type="email"],
        select {
            width: 100%;
            padding: 8px;
            margin-bottom: 16px;
        }
        button {
            padding: 10px 15px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            margin-bottom: 10px;
        }
        .link-button {
            display: block;
            text-align: center;
            margin-top: 20px;
            text-decoration: none;
        }
    </style>
</head>
<body>
    <form asp-action="SubmitForm" asp-controller="Home" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        
        <label for="Username">Username:</label>
        <input type="text" asp-for="Username" id="Username" name="Username" required />
        <span asp-validation-for="Username" class="text-danger"></span>

        <label for="Email">Email:</label>
        <input type="email" asp-for="Email" id="Email" name="Email" required />
        <span asp-validation-for="Email" class="text-danger"></span>

        <label for="Password">Password:</label>
        <input type="password" asp-for="Password" id="Password" name="Password" required />
        <span asp-validation-for="Password" class="text-danger"></span>

        <label for="FirstName">First Name:</label>
        <input type="text" asp-for="FirstName" id="FirstName" name="FirstName" required />
        <span asp-validation-for="FirstName" class="text-danger"></span>

        <label for="LastName">Last Name:</label>
        <input type="text" asp-for="LastName" id="LastName" name="LastName" required />
        <span asp-validation-for="LastName" class="text-danger"></span>

        <label for="Address">Address:</label>
        <input type="text" asp-for="Address" id="Address" name="Address" required />
        <span asp-validation-for="Address" class="text-danger"></span>

        <label for="Role">Role:</label>
        <select asp-for="Role" id="Role" name="Role" asp-items="Html.GetEnumSelectList<UserRole>()" required>
            <option value="">Select Role</option>
        </select>
        <span asp-validation-for="Role" class="text-danger"></span>

        <button type="submit">Submit</button>
        <a href="/signin" class="link-button">Already have an account? Sign In.</a>
    </form>

    <a href="/createacc" class="link-button">Create an Account</a>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</body>
</html>