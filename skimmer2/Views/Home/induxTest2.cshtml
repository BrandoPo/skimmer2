@{
    ViewData["Title"] = "induxTest2";
    Layout = "~/Views/Shared/induxLayout2.cshtml";
}

<!-- Link to the CSS file -->
<link rel="stylesheet" href="~/css/induxTest2.css" asp-append-version="true" />

<!-- Header -->
<header class="site-header">
    <h1>@ViewData["Title"]</h1>
</header>

<!-- YouTube Video (full width, outside container) -->
<div class="full-width">
    <section class="video-section">
        <iframe width="100%"
                height="auto"
                src="https://www.youtube.com/embed/9bZkp7q19f0"
                title="YouTube video player"
                frameborder="0"
                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                allowfullscreen>
        </iframe>
    </section>
</div>

<!-- White Background Section: Size Comparison -->
<div class="full-width">
    <section class="white-section">
        <h2>Size Comparison</h2>
        <p>Our speakers are compact yet powerful, perfect for any space. See how they compare to everyday objects.</p>
        <div class="row">
            <div class="col-md-6">
                <img src="https://placehold.co/400x300?text=Speaker+Next+to+Coffee+Mug" alt="Size Comparison 1" class="img-fluid">
            </div>
            <div class="col-md-6">
                <img src="https://placehold.co/400x300?text=Speaker+Next+to+Book" alt="Size Comparison 2" class="img-fluid">
            </div>
        </div>
    </section>
</div>

<!-- Wave Background Section: Audio Quality -->
<div class="full-width">
    <section class="wave-section">
        <h2>Audio Quality</h2>
        <p>Experience crystal-clear sound with deep bass and crisp highs. Our speakers use advanced audio technology to outperform the competition.</p>
        <div class="row">
            <div class="col-md-12">
                <img src="https://placehold.co/600x300?text=Audio+Quality+Chart" alt="Audio Quality Chart" class="img-fluid">
            </div>
        </div>
    </section>
</div>

<!-- White Background Section: Battery Life -->
<div class="full-width">
    <section class="white-section">
        <h2>Battery Life</h2>
        <p>Enjoy up to 12 hours of playback on a single charge, with fast charging in just 2 hours.</p>
        <div class="row">
            <div class="col-md-4">
                <img src="https://placehold.co/200x200?text=Battery+Icon" alt="Battery Icon" class="img-fluid">
                <p>12 Hours Playback</p>
            </div>
            <div class="col-md-4">
                <img src="https://placehold.co/200x200?text=Charging+Icon" alt="Charging Icon" class="img-fluid">
                <p>2 Hours Charging Time</p>
            </div>
            <div class="col-md-4">
                <img src="https://placehold.co/200x200?text=Power+Icon" alt="Power Icon" class="img-fluid">
                <p>Energy Efficient</p>
            </div>
        </div>
    </section>
</div>

<!-- Wave Background Section: Testimonials -->
<div class="full-width">
    <section class="wave-section">
        <h2>What Our Customers Say</h2>
        <div class="row">
            <div class="col-md-6">
                <div class="testimonial-item">
                    <p>"The sound quality is amazing, and the battery lasts all day!" - John D.</p>
                </div>
            </div>
            <div class="col-md-6">
                <div class="testimonial-item">
                    <p>"Perfect size for my desk, and the design is sleek." - Sarah K.</p>
                </div>
            </div>
        </div>
    </section>
</div>

@section Scripts {
    <script>
        console.log("Page loaded!");
    </script>
}