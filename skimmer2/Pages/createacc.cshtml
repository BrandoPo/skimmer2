@page
@model skimmer2.Pages.RegisterModel
@{
    ViewData["Title"] = "Account Registration";
}

<style>
    body {
        background-color: #000;
        color: #ff0000;
        font-family: Arial, sans-serif;
    }
    form {
        max-width: 400px;
        margin: 50px auto;
        padding: 20px;
        background-color: #1a1a1a;
        border-radius: 8px;
        box-shadow: 0 0 10px #ff0000;
    }
    label {
        display: block;
        margin-bottom: 8px;
    }
    input[type="text"],
    input[type="password"],
    input[type="email"],
    select {
        width: 100%;
        padding: 8px;
        margin-bottom: 16px;
        border: 1px solid #ff0000;
        border-radius: 4px;
        background-color: #333;
        color: #fff;
    }
    button {
        background-color: #ff0000;
        color: #000;
        padding: 10px 15px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        margin-bottom: 10px;
    }
    button:hover {
        background-color: #cc0000;
    }
    .link-button {
        display: block;
        text-align: center;
        margin-top: 20px;
        color: #ff0000;
        text-decoration: none;
    }
    .link-button:hover {
        color: #cc0000;
    }
    .alert {
        max-width: 400px;
        margin: 20px auto;
        padding: 10px;
        border-radius: 4px;
    }
    .alert-danger {
        background-color: #ffcccc;
        color: #990000;
    }
    .alert-success {
        background-color: #ccffcc;
        color: #006600;
    }
</style>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger">@Model.ErrorMessage</div>
}

@if (!string.IsNullOrEmpty(Model.SuccessMessage))
{
    <div class="alert alert-success">@Model.SuccessMessage</div>
}

<form method="post">
    <label asp-for="User.Username">Username:</label>
    <input asp-for="User.Username" required />

    <label asp-for="User.Email">Email:</label>
    <input asp-for="User.Email" required />

    <label asp-for="User.Password">Password:</label>
    <input asp-for="User.Password" type="password" required />

    <label asp-for="User.FirstName">First Name:</label>
    <input asp-for="User.FirstName" required />

    <label asp-for="User.LastName">Last Name:</label>
    <input asp-for="User.LastName" required />

    <label asp-for="User.Address">Address:</label>
    <input asp-for="User.Address" required />

    <label asp-for="User.Role">Role:</label>
    <select asp-for="User.Role" required>
        <option value="user">User</option>
        <option value="admin">Admin</option>
    </select>

    <button type="submit">Submit</button>
    <a href="/signin" class="link-button">Already have an account? Sign In.</a>
</form>

<a href="/createacc" class="link-button">Create an Account</a>
