@page
@model RegisterModel
@{
    ViewData["Title"] = "Account Registration";
}

<style>
    body {
        background-color: #000;
        color: #ff0000;
        font-family: Arial, sans-serif;
    }
    form {
        max-width: 400px;
        margin: 50px auto;
        padding: 20px;
        background-color: #1a1a1a;
        border-radius: 8px;
        box-shadow: 0 0 10px #ff0000;
    }
    label {
        display: block;
        margin-bottom: 8px;
    }
    input[type="text"],
    input[type="password"],
    input[type="email"],
    select {
        width: 100%;
        padding: 8px;
        margin-bottom: 16px;
        border: 1px solid #ff0000;
        border-radius: 4px;
        background-color: #333;
        color: #fff;
    }
    button {
        background-color: #ff0000;
        color: #000;
        padding: 10px 15px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        margin-bottom: 10px;
    }
    button:hover {
        background-color: #cc0000;
    }
    .link-button {
        display: block;
        text-align: center;
        margin-top: 20px;
        color: #ff0000;
        text-decoration: none;
    }
    .link-button:hover {
        color: #cc0000;
    }
    .alert {
        max-width: 400px;
        margin: 20px auto;
        padding: 10px;
        border-radius: 4px;
    }
    .alert-success {
        background-color: #ccffcc;
        color: #006600;
    }
    .alert-danger {
        background-color: #ffcccc;
        color: #990000;
    }
</style>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger">@Model.ErrorMessage</div>
}

@if (!string.IsNullOrEmpty(Model.SuccessMessage))
{
    <div class="alert alert-success">@Model.SuccessMessage</div>
}

<form method="post">
    <label for="username">Username:</label>
    <input type="text" id="username" name="Username" required />

    <label for="email">Email:</label>
    <input type="email" id="email" name="Email" required />

    <label for="password">Password:</label>
    <input type="password" id="password" name="Password" required />

    <label for="first_name">First Name:</label>
    <input type="text" id="first_name" name="FirstName" required />

    <label for="last_name">Last Name:</label>
    <input type="text" id="last_name" name="LastName" required />

    <label for="address">Address:</label>
    <input type="text" id="address" name="Address" required />

    <label for="role">Role:</label>
    <select id="role" name="Role" required>
        <option value="user">User</option>
        <option value="admin">Admin</option>
    </select>

    <button type="submit">Submit</button>
    <a href="/signin" class="link-button">Already have an account? Sign In.</a>
</form>

<a href="/createacc" class="link-button">Create an Account</a>
