@page
@model SignInModel
@{
    ViewData["Title"] = "Sign In";
}

<h2>@ViewData["Title"]</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Identifier">Username or Email</label>
        <input asp-for="Identifier" class="form-control" />
        <span asp-validation-for="Identifier" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password">Password</label>
        <input asp-for="Password" type="password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Sign In</button>
</form>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger mt-3">@Model.ErrorMessage</div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
