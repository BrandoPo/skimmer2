@page
@model skimmer2.Pages.SignInModel
@{
    ViewData["Title"] = "Sign In";
}

<style>
    body {
        background-color: #000;
        color: #ff0000;
        font-family: Arial, sans-serif;
    }
    form {
        max-width: 400px;
        margin: 50px auto;
        padding: 20px;
        background-color: #1a1a1a;
        border-radius: 8px;
        box-shadow: 0 0 10px #ff0000;
    }
    label {
        display: block;
        margin-bottom: 8px;
    }
    input[type="text"],
    input[type="password"] {
        width: 100%;
        padding: 8px;
        margin-bottom: 16px;
        border: 1px solid #ff0000;
        border-radius: 4px;
        background-color: #333;
        color: #fff;
    }
    button {
        background-color: #ff0000;
        color: #000;
        padding: 10px 15px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        margin-bottom: 10px;
    }
    button:hover {
        background-color: #cc0000;
    }
    .link-button {
        display: block;
        text-align: center;
        margin-top: 20px;
        color: #ff0000;
        text-decoration: none;
    }
    .link-button:hover {
        color: #cc0000;
    }
    .error-message {
        color: #ff0000;
        text-align: center;
        margin-bottom: 10px;
    }
</style>

<form method="post">
    <div class="error-message">
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <p>@Model.ErrorMessage</p>
        }
    </div>

    <label for="username">Username:</label>
    <input type="text" id="username" name="User.Username" required />

    <label for="password">Password:</label>
    <input type="password" id="password" name="User.Password" required />

    <button type="submit">Sign In</button>
</form>

<a href="/createacc" class="link-button">Create an Account</a>